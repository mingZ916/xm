<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BMI" android:background="#e0fffa">

    <EditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:gravity="center_vertical"
            android:id="@+id/heightText"
            android:hint="@string/heightText_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="59dp"
            android:inputType="textPersonName"
            android:hint="@string/weightText_name"
            android:ems="10"
            android:gravity="center_vertical"
            android:id="@+id/weightText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/heightText"/>
    <Button
            android:text="@string/showButton_name"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:id="@+id/calButton" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/weightText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:textSize="20sp" android:background="#fef200"/>
    <TextView
            android:text="@string/resultText_name"
            android:layout_width="242dp"
            android:layout_height="100dp"
            android:id="@+id/resText"
            android:layout_marginTop="268dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/heightText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="93dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:textSize="24sp" android:background="#A8ABEEE2"
            android:textColor="#6F6F6C"/>
    <ImageView
            android:layout_width="90dp"
            android:layout_height="155dp" app:srcCompat="@drawable/timg2"
            android:id="@+id/imageView" android:layout_marginTop="155dp"
            app:layout_constraintTop_toBottomOf="@+id/weightText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    android:layout_marginStart="166dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>